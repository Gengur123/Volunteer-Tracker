<h2>Volunteer: <%= @volunteer.name %></h2>
<h3>Project: <%= @volunteer.project.title %></h3>

<form action="/projects/<%= @volunteer.project.id %>/volunteers/<%= @volunteer.id %>" method="post">
  <input type="hidden" name="_method" value="patch">

  <label for="volunteer_name">Rename Volunteer</label>
  <input type="text" name="volunteer_name">

  <button type="submit">Rename Volunteer</button>
</form>

<form action="/projects/<%= @volunteer.project.id %>/volunteers/<%= @volunteer.id %>" method="post">
  <input type="hidden" name="_method" value="delete">

  <button type="submit">Delete Volunteer</button>
</form>

<p><a href="/projects">Return to project list</a></p>